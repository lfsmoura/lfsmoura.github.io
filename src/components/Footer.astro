---
import socialProfiles from '../data/social-profiles.json';
---

<footer
  class="py-10 px-3 lg:px-0 flex flex-col lg:flex-row justify-between items-center gap-2 lg:gap-4 lg:gap-0"
>
  <ul
    class="flex flex-wrap justify-center lg:justify-start w-full lg:w-auto gap-x-6 gap-y-2"
  >
    {socialProfiles.map((profile) => (
      <li>
        <a href={profile.url}>{profile.name}</a>
      </li>
    ))}
  </ul>
  <p role="presentation" class="hidden lg:flex">&bull;</p>
  <div
    class="flex items-center justify-items-center lg:text-sm text-gray-500 text-center lg:text-right gap-4"
  >
    <span>CC BY-NC-SA 4.0</span>
    <span>
      <a href="/disclaimer">Disclaimer</a>
    </span>
  </div>
</footer>
